{
    "name": "goodt-wcore",
    "version": "1.0.0",
    "private": true,
    "main": "dist/lib.umd.js",
    "scripts": {
        "dev": "vite",
        "serve": "vue-cli-service serve",
        "build": "npm run lint && npm run format && npm run build:lib",
        "build:lib": "vue-cli-service build --target lib --formats umd --dest ./dist/ --name goodt-wcore --filename lib ./src/core/index.js --report",
        "lint": "vue-cli-service lint --no-fix src/",
        "lint:all": "scripts/lint/eslint-all.sh",
        "lint:all:fix": "vue-cli-service lint src/",
        "lint:staged:short": "scripts/lint/eslint-staged-short.sh",
        "lint:staged": "scripts/lint/eslint-staged.sh",
        "lint:committed:short": "scripts/lint/eslint-committed-short.sh",
        "format": "prettier --write ./src/**/*",
        "test:unit": "vue-cli-service test:unit",
        "docs:panel-ui": "vue-styleguidist server",
        "docs:panel-ui:build": "vue-styleguidist build",
        "prepare": "husky install",
        "postinstall": "npx patch-package --patch-dir=.patches",
        "scaffold": "node ./scripts/scaffold/index.js"
    },
    "dependencies": {
        "abc-charts": "^1.6.4",
        "axios": "^0.21.1",
        "goodt-dremio-sdk": "^1.0.21",
        "goodteditor-ui": "^0.0.32",
        "keycloak-js": "^10.0.0",
        "lodash": "^4.17.21",
        "portal-vue": "^2.1.7",
        "vuedraggable": "^2.24.3"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.13.14",
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@vue/cli-plugin-babel": "^4.5.12",
        "@vue/cli-plugin-eslint": "^5.0.0-beta.0",
        "@vue/cli-plugin-unit-jest": "^5.0.0-beta.0",
        "@vue/cli-service": "^4.5.12",
        "@vue/eslint-config-airbnb": "^5.3.0",
        "@vue/eslint-config-typescript": "^7.0.0",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-formatter-friendly": "^7.0.0",
        "eslint-formatter-markdown": "^1.0.4",
        "eslint-plugin-jsdoc": "^33.0.0",
        "eslint-plugin-vue": "^7.9.0",
        "goodt-framework-css": "^1.1.1",
        "husky": "^6.0.0",
        "less": "^4.1.1",
        "less-loader": "^6.0.0",
        "lint-staged": "^10.5.4",
        "vite": "^2.1.5",
        "vite-plugin-vue2": "^1.4.3",
        "vue": "^2.6.12",
        "vue-styleguidist": "4.35.0"
    },
    "lint-staged": {
        "*.(js|jsx|vue|ts)": [
            "npm run lint"
        ]
    }
}
