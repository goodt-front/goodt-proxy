{
    "name": "goodt-wcore",
    "version": "1.0.0",
    "private": true,
    "main": "src/core/index.js",
    "scripts": {
        "dev": "vite",
        "serve": "vue-cli-service serve",
        "build": "npm run lint && npm run format && npm run build:lib",
        "build:lib": "vue-cli-service build --target lib --formats umd --dest ./dist/ --name goodt-wcore --filename lib ./src/core/index.js --report",
        "lint": "vue-cli-service lint --no-fix src/",
        "lint:all": "scripts/lint/eslint-all.sh",
        "lint:all:fix": "vue-cli-service lint src/",
        "lint:staged:short": "scripts/lint/eslint-staged-short.sh",
        "lint:staged": "scripts/lint/eslint-staged.sh",
        "lint:committed:short": "scripts/lint/eslint-committed-short.sh",
        "format": "prettier --write ./src/**/*",
        "test:unit": "vue-cli-service test:unit",
        "docs:panel-ui": "npx vue-styleguidist server --config ./styleguide.config.js",
        "docs:panel-ui:build": "vue-styleguidist build --config ./styleguide.config.js",
        "prepare": "npm dedupe --force && husky install && npx patch-package --patch-dir=.patches",
        "scaffold": "npx goodt-scaffold",
        "scaffold:panel": "npx goodt-scaffold-panel"
    },
    "dependencies": {
        "@goodt/core": "file:src/core",
        "@goodt/panels": "file:src/core/panels",
        "@goodt/scaffold": "file:scripts/scaffold",
        "@goodt/styleguide": "file:scripts/styleguide",
        "goodt-dremio-sdk": "^1.0.21"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^4.5.13",
        "@vue/cli-service": "^4.5.13",
        "less": "^4.1.1",
        "less-loader": "^6.0.0",
        "vite": "^2.1.5",
        "vite-plugin-vue2": "^1.4.3",
        "webpack": "^4.46.0"
    },
    "peerDependencies": {
        "axios": "^0.21.1",
        "goodt-framework-css": "^1.1.1",
        "goodteditor-ui": "^0.0.32",
        "keycloak-js": "^10.0.0",
        "lodash": "^4.17.21",
        "portal-vue": "^2.1.7",
        "vue": "^2.6.12",
        "vuedraggable": "^2.24.3"
    },
    "workspaces": [
        ".config"
    ],
    "lint-staged": {
        "*.(js|jsx|vue|ts)": [
            "npm run lint"
        ]
    },
    "vuePlugins": {
        "resolveFrom": ".config"
    }
}
